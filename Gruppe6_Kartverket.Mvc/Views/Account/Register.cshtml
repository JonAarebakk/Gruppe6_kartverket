@model Gruppe6_Kartverket.Mvc.Models.RegistrationFormModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Registrer bruker";
}

@section HeadContent {
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/Registreing.css">
}

<div class="registrering-wrapper">
    <div class="RFwrapper">
        <div class="RFcontainer">
            <div id="containerhead">
                <h1>Opprett konto</h1>
                <p>Har du allerede en bruker? <a asp-controller="Account" asp-action="LogIn">Logg inn</a></p>
            </div>

            <div id="containerbody">
                <form asp-action="Register" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()

                    <p>
                        <div>
                            <label asp-for="FirstName">Fornavn:</label>
                            <input asp-for="FirstName" placeholder="fornavn" autocomplete="given-name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </p>
                    <p>
                        <div>
                            <label asp-for="LastName">Etternavn:</label>
                            <input asp-for="LastName" placeholder="etternavn" autocomplete="family-name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </p>
                    <p>
                        <div>
                            <label asp-for="PhoneNumber">Telefonnummer:</label>
                            <input asp-for="PhoneNumber" placeholder="telefonnummer" autocomplete="tel" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </p>
                    <p>
                        <div>
                            <label asp-for="Email">E-post:</label>
                            <input asp-for="Email" placeholder="epost" autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </p>
                    <p>
                        <div>
                            <label asp-for="Gender">Kjønn:</label>
                            <select asp-for="Gender" autocomplete="sex">
                                <option value="Man">Mann</option>
                                <option value="Woman">Kvinne</option>
                                <option value="Other">Annet</option>
                            </select>
                        </div>
                    </p>

                    <p>
                        <div>
                            <label asp-for="Username">Brukernavn:</label>
                            <input asp-for="Username" placeholder="brukernavn" autocomplete="username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </p>
                    <p>
                        <div>
                            <label asp-for="Password">Passord:</label>
                            <input asp-for="Password" placeholder="passord" type="password" autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </p>
                    <p>
                        <div>
                            <label asp-for="ConfirmPassword">Bekreft passord:</label>
                            <input asp-for="ConfirmPassword" placeholder="gjenta passord" type="password" autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </p>
                    <p>
                        <div>
                            <label asp-for="UserType">Brukertype:</label>
                            <select asp-for="UserType">
                                <option value="Us">Vanlig Bruker</option>
                                <option value="Ad">Admin Bruker</option>
                            </select>
                        </div>
                    </p>

                    <button type="submit" class="btn btn-primary">Opprett Bruker</button>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
