<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gruppe6_Kartverket.Mvc</title>

    <!-- Standard CSS og biblioteker -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gruppe6_Kartverket.Mvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/leaflet/leaflet-geoman.css" asp-append-version="true" />
    <!--  USED FOR OPEN LAYERS WHICH IS CURRENTLY NOT BEING USED
    <link rel="stylesheet" href="~/lib/ol/ol.css" asp-append-version="true" />  -->

    @await RenderSectionAsync("HeadContent", required: false)
    
    <!-- Legg til landingpage.css -->

    <link rel="stylesheet" href="~/css/landingPage.css" asp-append-version="true" />


    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    
</head>

<body>
    <header>
        <nav id="navigation-bar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="display: flex; align-items: center;">

                <!-- Logo Placeholder -->

                <a href="@Url.Action("LandingPage", "LandingPage")" >
                    <img src="~/images/logo.svg" id="logoContainer" />
                </a>

                <!-- Search Box -->
                <form action="@Url.Action("Index", "Home")" method="get" class="d-flex ms-auto" style="flex-grow: 1; max-width: 300px;">
                    <input type="text" name="search" placeholder="Søk" aria-label="Søk" class="form-control me-2" style="width: 100%;" />
                    <button type="submit" class="btn" style="background-color: #156630; color: white;">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
                
                <div class="headertoplinks">
                    <a href="@Url.Action("ContactUs", "ContactUs")" class="btn btn-outline-secondary ms-3">
                        Contact Us
                    </a>
                </div>
                
                <!-- Log In Button -->
                <a href="@Url.Action("LogIn", "LogIn")" class="btn btn-outline-secondary ms-3">
                    Log in</a>

                <!-- Settings Icon -->
                <a href="@Url.Action("Settings", "Settings")" class="ms-3" style="color: #555; font-size: 24px;">
                    <i class="fas fa-cog"></i>
                </a>
            </div>
        </nav>
    </header>

    <div class="container">
         <main role="main" class="pb-3">
          @RenderBody()
         </main>
    </div>

<!-- JavaScript-filer -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/leaflet/leaflet.js"></script>
<script src="~/lib/leaflet/leaflet-geoman.js"></script>
<!--  USED FOR OPEN LAYERS WHICH IS CURRENTLY NOT BEING USED
<script src="~/lib/ol/dist/ol.js"></script> -->

  

            <footer class="sitefooter">
                <!-- First Column: Logo -->
                <div class="sitefooter-column">
                    <a href="/" class="sitefooter-logolink" title="Gå til forsiden">
                        <img src="~/images/logo.svg" id="logoContainer" />
                    </a>
                </div>

                <!-- Second Column: Contact Info -->
                <div class="sitefooter-column">
                    <h4>Hjelp</h4>
                    <p>Telefon: <a href="tel:32118000">32 11 80 00</a></p>
                    <p>E-post: <a href="mailto:post@kartverket.no">post@kartverket.no</a></p>
                    <p><a href="/om-kartverket/kontakt-oss">Kontaktinfo og adresser</a></p>
                </div>
                
                <!-- Third Column: Help Links -->
                <div class="sitefooter-column">
                    <h4>Hjelp</h4>
                    <a href="http://status.kartverket.no/" rel="noopener nofollow">Driftsmeldinger</a><br>
                    <a href="/om-kartverket/faq" rel="noopener nofollow">Ofte stilte spørsmål</a><br>
                    <a href="/eiendom/skjema/alleskjema" rel="noopener nofollow">Skjemaer</a>
                </div>

                <!-- Fourth Column: Follow Us and Social Links -->
                <div class="sitefooter-column">
                    <h4>Følg oss</h4>
                    <a href="https://www.facebook.com/kartverket.no" rel="noopener nofollow">Facebook</a><br>
                    <a href="https://www.instagram.com/kartverket.no" rel="noopener nofollow">Instagram</a><br>
                    <a href="https://www.linkedin.com/company/65713?trk=NUS_CMPY_TWIT" rel="noopener nofollow">LinkedIn</a><br>
                    <a href="https://pub.dialogapi.no/s/3403d74a-8e34-4ab5-a221-1bf58c425982" rel="noopener nofollow">Nyhetsbrev</a><br>
                    <a href="https://vimeo.com/kartverket/videos" rel="noopener nofollow">Video</a>
                </div>
            </footer>


            @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
