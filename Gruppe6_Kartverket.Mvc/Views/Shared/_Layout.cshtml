<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gruppe6_Kartverket.Mvc</title>

    <!-- Standard CSS og biblioteker -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gruppe6_Kartverket.Mvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/leaflet/leaflet-geoman.css" asp-append-version="true" />
    <!--  USED FOR OPEN LAYERS WHICH IS CURRENTLY NOT BEING USED
    <link rel="stylesheet" href="~/lib/ol/ol.css" asp-append-version="true" />  -->

    @RenderSection("HeadContent", required: false)

    <!-- Legg til landingpage.css -->
    <link rel="stylesheet" href="~/css/LandingPage.css" asp-append-version="true" />

    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
<header>
    <nav id="navigation-bar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid" style="display: flex; align-items: center;">

            <!-- Logo Placeholder -->
            <div id="logoContainer" style="margin-right: 20px;"></div>

            <!-- Search Box -->
            <form action="@Url.Action("Index", "Home")" method="get" class="d-flex" style="flex-grow: 1;">
                <input type="text" name="search" placeholder="Søk etter frukt" aria-label="Søk" class="form-control me-2" style="width: 100%; max-width: 300px;" />
                <button type="submit" class="btn" style="background-color: #156630; color: white;">
                    <i class="fas fa-search"></i>
                </button>
            </form>

            <!-- Log In Button -->
            <a href="@Url.Action("LogIn", "LogIn")" class="btn btn-outline-secondary ms-3">
                Log in
            </a>

            <!-- Settings Icon -->
            <a href="@Url.Action("Settings", "Settings")" class="ms-3" style="color: #555; font-size: 24px;">
                <i class="fas fa-cog"></i>
            </a>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- JavaScript-filer -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/leaflet/leaflet.js"></script>
<script src="~/lib/leaflet/leaflet-geoman.js"></script>
<!--  USED FOR OPEN LAYERS WHICH IS CURRENTLY NOT BEING USED
<script src="~/lib/ol/dist/ol.js"></script> -->

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
