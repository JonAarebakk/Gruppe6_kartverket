@model List<Gruppe6_Kartverket.Mvc.Data.GeoChange>

@{
    Layout = "~/Views/Shared/_CaseWorkerLayout.cshtml";
    ViewData["Title"] = "CaseWorkerPage-V2";
}

@section HeadContent {
    <link rel="stylesheet" href="~/css/caseWorkerPage-V2.css">
}

<div class="grid-container">
    <div class="grid-item1">
        <div id="SideBarV2-Flex">
            <div class="flex-items" id="flexItem1">1</div>
            <div class="flex-items" id="flexItem2">2</div>
            <div class="flex-items" id="flexItem3">3</div>
            <div class="flex-items" id="flexItem4">4</div>
            <div class="flex-items" id="flexItem5">5</div>
            <div class="flex-items" id="flexItem6">6</div>
            <div class="flex-items" id="flexItem7">7</div>
            <div class="flex-items" id="flexItem8">8</div>
            <div class="flex-items" id="flexItem9">9</div>
            <div class="flex-items" id="flexItem10">10</div>
            <div class="flex-items" id="flexItem11">11</div>
        </div>
    </div>
    <div class="grid-item2">
        <div id="kategorier-flex">
            <div class="kategorier-flex-items" id="Kategorier-flex-items1">1</div>
            <div class="kategorier-flex-items" id="Kategorier-flex-items2">2</div>
            <div class="kategorier-flex-items" id="Kategorier-flex-items3">3</div>
            <div class="kategorier-flex-items" id="Kategorier-flex-items4">4</div>
            <div class="kategorier-flex-items" id="Kategorier-flex-items5">5</div>
            <div class="kategorier-flex-items" id="Kategorier-flex-items6">6</div>
        </div>
    </div>
    <div class="grid-item3">
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>GeoJson</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="3">No data available</td>
                </tr>
            }
            else
            {
                @foreach (var change in Model)
                {
                    if (change == null)
                    {
                        <tr>
                            <td>error</td>
                            <td>error</td>
                            <td>error</td>
                        </tr>
                    }
                    else
                    {
                        <tr>                              
                            <td>@change.Id</td>           
                            <td>@change.GeoJson</td>      
                            <td>@change.Description</td>  
                        </tr>                             
                    }
                }
            }
            </tbody>
        </table>
    </div>
</div>
