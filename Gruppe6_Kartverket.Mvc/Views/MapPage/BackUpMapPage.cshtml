@{
    ViewData["Title"] = "Home Page";
}

@section HeadContent {
    <!-- Link to CSS file -->
    <link rel="stylesheet" href="~/css/mapPage.css" asp-append-version="true" />
}

<div id="map">
    <div class="map-buttons">
        <button class="map-button" data-select="LineString">Lin</button>
        <button class="map-button" data-select="Point">Poi</button>
        <button class="map-button" data-select="Polygon">Pol</button>
        <button class="map-button" data-select="Circle">Cir</button>
    </div>
</div>

<div style="display: none;">
    <div id="popup"></div>
</div>

<div class="row">
    <div class="col-auto">
        <span class="input-group">
            <label class="input-group-text" for="type">Geometry type:</label>
            <select class="form-select" id="type">
                <option value="None">None</option>
                <option value="LineString">LineString</option>
                <option value="Polygon">Polygon</option>
                <option value="Circle">Circle</option>
                <option value="Point">Point</option>
            </select>
        </span>
    </div>
</div>

<div>
    <button class="delete-feature">Delete next feature</button>
</div>


@section Scripts {
    <script type="module" src="~/js/ol_map4.js"></script>
}