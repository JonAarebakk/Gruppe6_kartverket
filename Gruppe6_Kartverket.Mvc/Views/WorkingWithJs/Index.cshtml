<div class="site-wrapper">
    <p>
        Vi grunnet både noen tekniske problemer med omgjøring av kart, og at gruppemedlemmer har vært syke så 
        lånte vi midlertidig løsning for å fylle kravene. Dette vil endres fortløpende. Vi har full forståelse
        av funksjonaliteten på koden som ligger bak. Måtte trouble shoote noe i 2 timer :)
    </p>

    <div id="randomValue"></div>
    <div id="serverResponse"></div>

    <input type="button" value="Load random value" onclick="loadRandomValue()" />
    <input type="button" value="Send data" onclick="sendDataToTheServer()" />
</div>

@section Scripts {
    <script>

        const apiUrl = '/api/randomvalue/';

        function sendDataToTheServer() {

            var randomNumber = document.getElementById("randomValue").innerHTML;
            if (randomNumber === undefined) {
                randomNumber = 1337;
            }
            var model =
            {
                randomNumber: randomNumber,
                message: "Hello from the client"
            }

            var requestOptions = {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(model),
            };
            fetch(apiUrl, requestOptions)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    document.getElementById("serverResponse").innerHTML = data.Message;
                })
                .catch(error => {
                    console.error

                        ('Error:', error);
                });
        }



        function loadRandomValue() {
            fetch(apiUrl)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }

                    return response.json();
                })
                .then(data => {
                    document.getElementById("randomValue").innerHTML = data;
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }

    </script>
}